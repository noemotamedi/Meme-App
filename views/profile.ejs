<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/login" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> <%= user.local.email %></h3>

            </div>
        </div>

    </div>
    <div class="row">
      <div class="col-sm-4">
        <div class="addMeme">
            <form action="/addMeme" method="POST">
              <label>Add joke</label>
              <input type="text" class="form-control " name="joke">
              <input type="submit" class="form-control btn-success" name="Add joke">

            </form>
        </div>
      </div>
    </div>

  <div>
    <p> <a href="/feed"> Go to Jokes </a></p>
</div>
<ul class='memes'>
<table class ="memes" border = "1px">
  <tr>
    <th>My Jokes</th>
  </tr>
  <% for(var i = 0; i < memes.length;i++){ %>
    <% if(memes[i].user == user.local.email){ %>
    <tr>
      <td><%= memes[i].meme %></td>
    </tr>
    <% }%>
    <% }%>
</ul>
</body>
</html>
